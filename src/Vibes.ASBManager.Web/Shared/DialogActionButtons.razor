<MudButton OnClick="@OnCancel" tabindex="@CancelTabIndex">@CancelText</MudButton>
<MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="@OnSave" tabindex="@SaveTabIndex">@SaveText</MudButton>

@code {
    [Parameter] public string SaveText { get; set; } = "Save";
    [Parameter] public string CancelText { get; set; } = "Cancel";
    [Parameter] public int CancelTabIndex { get; set; } = 98;
    [Parameter] public int SaveTabIndex { get; set; } = 99;
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnSave { get; set; }
}
