<MudTreeView T="string" SelectedValue="@SelectedValue" SelectedValueChanged="@OnSelectedChanged">
    <MudTreeViewItem T="string" Text="Namespace" Value="@("root")" Icon="@Icons.Material.Filled.Hub" />
    <MudTreeViewItem T="string" Text="Queues" Value="@("queues")" Icon="@Icons.Material.Filled.Queue" Expanded="@QueuesExpanded">
        @if (Queues is not null)
        {
            foreach (var q in Queues)
            {
                <MudTreeViewItem T="string" Text="@FormatQueueText(q)" Value="@($"queue:{q.Name}")" Icon="@Icons.Material.Filled.Inbox" />
            }
        }
    </MudTreeViewItem>
    <MudTreeViewItem T="string" Text="Topics" Value="@("topics")" Icon="@Icons.Material.Filled.Topic" Expanded="@TopicsExpanded">
        @if (Topics is not null)
        {
            foreach (var t in Topics)
            {
                var subs = TopicSubscriptions.TryGetValue(t.Name, out var subscriptionSummaries)
                    ? subscriptionSummaries
                    : Array.Empty<SubscriptionSummary>();
                <MudTreeViewItem T="string" Text="@FormatTopicText(t, subs)" Value="@($"topic:{t.Name}")" Icon="@Icons.Material.Filled.Topic" Expanded="@ExpandedTopicNames.Contains(t.Name)">
                    @if (TopicSubscriptions.TryGetValue(t.Name, out var subs) && subs is not null)
                    {
                        foreach (var s in subs)
                        {
                            <MudTreeViewItem T="string" Text="@FormatSubscriptionText(s)" Value="@($"subscription:{t.Name}/{s.SubscriptionName}")" Icon="@Icons.Material.Filled.Mail" />
                        }
                    }
                </MudTreeViewItem>
            }
        }
    </MudTreeViewItem>
</MudTreeView>

@code {
    [Parameter] public string? SelectedValue { get; set; }
    [Parameter] public EventCallback<string?> SelectedValueChanged { get; set; }

    [Parameter] public IReadOnlyList<QueueSummary>? Queues { get; set; }
    [Parameter] public IReadOnlyList<TopicSummary>? Topics { get; set; }
    [Parameter] public Dictionary<string, IReadOnlyList<SubscriptionSummary>> TopicSubscriptions { get; set; } = new();

    [Parameter] public bool QueuesExpanded { get; set; }
    [Parameter] public bool TopicsExpanded { get; set; }
    [Parameter] public HashSet<string> ExpandedTopicNames { get; set; } = new();

    private Task OnSelectedChanged(string? value) => SelectedValueChanged.InvokeAsync(value);

    private static string FormatQueueText(QueueSummary queue)
        => $"{queue.Name} (A:{FormatCount(queue.ActiveMessageCount)} DLQ:{FormatCount(queue.DeadLetterMessageCount)})";

    private static string FormatTopicText(TopicSummary topic, IReadOnlyList<SubscriptionSummary> subscriptions)
    {
        var subscriptionCount = subscriptions.Count;
        var activeTotal = subscriptions.Sum(subscription => subscription.ActiveMessageCount);
        var dlqTotal = subscriptions.Sum(subscription => subscription.DeadLetterMessageCount);
        return $"{topic.Name} (Subs:{FormatCount(subscriptionCount)} A:{FormatCount(activeTotal)} DLQ:{FormatCount(dlqTotal)} Sch:{FormatCount(topic.ScheduledMessageCount)})";
    }

    private static string FormatSubscriptionText(SubscriptionSummary subscription)
        => $"{subscription.SubscriptionName} (A:{FormatCount(subscription.ActiveMessageCount)} DLQ:{FormatCount(subscription.DeadLetterMessageCount)})";

    private static string FormatCount(long count) => count.ToString("N0");

    private static string FormatCount(int count) => count.ToString("N0");
}
