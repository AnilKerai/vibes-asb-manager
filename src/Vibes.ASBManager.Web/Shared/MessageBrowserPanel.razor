@using Vibes.ASBManager.Application.Models

<ActiveMessagesTable
    Items="ActiveItems"
    CanRefresh="CanRefresh"
    OnRefresh="OnActiveRefresh"
    Count="ActiveCount"
    OnRowClick="OnActiveRowClick" />

<DlqMessagesTable
    Items="DlqItems"
    CanRefresh="CanRefresh"
    OnRefresh="OnDlqRefresh"
    Count="DlqCount"
    OnRowClick="OnDlqRowClick" />

@code {
    [Parameter] public IReadOnlyList<MessagePreview>? ActiveItems { get; set; }
    [Parameter] public IReadOnlyList<MessagePreview>? DlqItems { get; set; }
    [Parameter] public bool CanRefresh { get; set; }
    [Parameter] public long? ActiveCount { get; set; }
    [Parameter] public long? DlqCount { get; set; }

    [Parameter] public EventCallback OnActiveRefresh { get; set; }
    [Parameter] public EventCallback OnDlqRefresh { get; set; }
    [Parameter] public EventCallback<TableRowClickEventArgs<MessagePreview>> OnActiveRowClick { get; set; }
    [Parameter] public EventCallback<TableRowClickEventArgs<MessagePreview>> OnDlqRowClick { get; set; }
}
